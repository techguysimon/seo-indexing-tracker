# Required: SQLAlchemy database URL (e.g. sqlite+aiosqlite:///./data/app.db)
DATABASE_URL=sqlite+aiosqlite:///./data/seo_indexing_tracker.db

# Required: Application secret key used for signing sensitive values
SECRET_KEY=replace-with-a-long-random-secret

# Optional: Host interface for the API server
HOST=0.0.0.0

# Optional: Port for the API server
PORT=8000

# Optional: Logging verbosity (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Logging format (text or json)
LOG_FORMAT=text

# Optional: Log file path (leave empty to log to stdout)
LOG_FILE=

# Optional: Log rotation max size in bytes
LOG_FILE_MAX_BYTES=10485760

# Optional: Number of rotated log files to keep
LOG_FILE_BACKUP_COUNT=5

# Optional: Enable or disable scheduler jobs (true/false)
SCHEDULER_ENABLED=true
